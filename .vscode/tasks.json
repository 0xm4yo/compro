{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-std=c++20", 
                "-g",
                "-O0",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run Python",
            "type": "shell",
            "command": "python",
            "args": ["${file}"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}

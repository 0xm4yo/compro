{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C++",
            "type": "shell",
            "command": "g++",
            "args": ["-std=c++20", "-o", "${fileDirname}/${fileBasenameNoExtension}.out", "${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run Python",
            "type": "shell",
            "command": "python",
            "args": ["${file}"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
